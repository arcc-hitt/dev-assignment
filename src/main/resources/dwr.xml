<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC
        "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
        "http://directwebremoting.org/schema/dwr30.dtd">

<dwr>
    <allow>
        <!-- Prefix Service for Tab 4 (DWR implementation) -->
        <create creator="spring" javascript="prefixService">
            <param name="beanName">prefixDwrService</param>
        </create>

        <!-- Item Service for Tab 3 -->
        <create creator="spring" javascript="itemService">
            <param name="beanName">itemDwrService</param>
        </create>

        <!-- Convert domain objects to JSON -->
        <convert converter="bean" match="com.example.model.Prefix">
            <param name="include" value="id,searchPrefix,gender,prefixOf"/>
        </convert>

        <convert converter="bean" match="com.example.model.Item">
            <param name="include" value="id,code,name,category,createdOn"/>
        </convert>

        <!-- Convert Date objects -->
        <convert converter="date" match="java.util.Date">
            <param name="format" value="yyyy-MM-dd HH:mm:ss"/>
        </convert>

        <!-- Convert collections -->
        <convert converter="collection" match="java.util.List">
            <param name="class" value="java.util.ArrayList"/>
        </convert>

        <!-- Convert primitive types -->
        <convert converter="primitive" match="java.lang.String"/>
        <convert converter="primitive" match="java.lang.Integer"/>
        <convert converter="primitive" match="java.lang.Long"/>
        <convert converter="primitive" match="java.lang.Boolean"/>
    </allow>
</dwr>